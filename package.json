{
  "name": "@topashq/toolkit",
  "version": "0.0.6",
  "description": "A collection of tools for creating apps in Topas City",
  "author": "TopasHQ <info@topas.city>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TopasHQ/toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/TopasHQ/toolkit.git"
  },
  "license": "MIT",
  "keywords": [
    "vr",
    "webxr",
    "blockchain",
    "lisk",
    "nodejs",
    "javascript",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "install:clean": "rm -rf node_modules && rm -f package-lock.json && npm i",
    "test": "echo \"Error: no test specified\"",
    "build": "rimraf ./dist && tsc -p ./tsconfig.json && copyfiles -u 1 src/assets/**/* dist && copyfiles LICENSE package.json README.md dist",
    "build:dev": "npm run build && rimraf ../toolkit-dev && mkdir -p ../toolkit-dev && copyfiles -u 1 \"dist/**/*\" ../toolkit-dev"
  },
  "devDependencies": {
    "@react-spring/three": "9.5.5",
    "@react-three/drei": "9.32.7",
    "@react-three/xr": "5.0.3",
    "@types/react": "^18.0.21",
    "@types/three": "0.143.0",
    "copyfiles": "^2.4.1",
    "react": "^18.2.0",
    "react-hotkeys-hook": "^3.4.7",
    "rimraf": "^3.0.2",
    "three": "0.143.0",
    "typescript": "4.8.3",
    "use-sound": "^4.0.1",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "@react-spring/three": ">=9.0.0",
    "@react-three/drei": ">=9.0.0",
    "@react-three/xr": ">=5.0",
    "react": ">=18.0",
    "react-hotkeys-hook": ">=3.0",
    "three": ">=0.143",
    "use-sound": ">=4.0",
    "uuid": ">=9.0.0"
  }
}
